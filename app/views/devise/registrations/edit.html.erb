<div class="container-fluid">
  <div class="row">
    <div class="wrapper col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 mx-auto">
      <div class="sign_up_form col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-6 col-md-6 col-md-offset-6 mx-auto">
        <h2 class = "text-center">ユーザー編集</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            
            <div class="form-group">
              <%= f.label "ユーザー名" %><br />
              <%= f.text_field :username,class:"text-center form-control",placeholder: "ユーザー名"  %>
            </div>

            <div class="form-group">
              <%= f.label :email,"メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true,class:"text-center form-control",placeholder: "メールアドレス" , autocomplete: "email" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.label :password,"新しいパスワード" %> 
              <%= f.password_field :password,class:"text-center form-control",placeholder: "新しいパスワード" , autocomplete: "new-password" %>
              <% if @minimum_password_length %>
               
                <em><%= @minimum_password_length %> 文字以上</em>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation,"新しいパスワード確認" %><br />
              <%= f.password_field :password_confirmation,class:"text-center form-control",placeholder: "新しいパスワード確認",  autocomplete: "new-password" %>
            </div>

            <div class="form-group">
              <%= f.label :current_password, "旧パスワード"%> 
              <%= f.password_field :current_password,class:"text-center form-control",placeholder: "旧パスワード" , autocomplete: "current-password" %>
            </div>

            
              <%= f.submit "アップデート", :class=>"btn btn-outline-primary" %>
         
          <% end %>

          <h3>アカウントを消す</h3>

          <p>本当に消しますか？ <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

          <%= link_to "Back", :back %>
    </div>
    </div>
  </div>
</div>    

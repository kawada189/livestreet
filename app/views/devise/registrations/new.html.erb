<div class="container-fluid">
  <div class="row">
    <div class="wrapper col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 mx-auto">
      <div class="sign_up_form col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-6 col-md-6 col-md-offset-6 mx-auto">
        <h2 class = "text-center">ユーザー登録</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label "ユーザ―名" %>
               <%= f.text_field :username, class:"text-center form-control",placeholder: "ユーザーネーム"%>
            </div>

            <div class="form-group">
               <%= f.label "メールアドレス" %>
               <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-center form-control",placeholder: "メールアドレス"%>
            </div>

            <div class="form-group">
              <%= f.label "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"text-center form-control",placeholder: "6文字以上のパスワード" %>
            </div>

            <div class="form-group">
              <%= f.label "確認用パスワード" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"text-center form-control",placeholder: "6文字以上のパスワード"%>
            </div>

            
              <%= f.submit "ユーザー登録",:class=>"btn btn-outline-primary" %>
           
          <% end %>
          <div class = "shared">
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</div>





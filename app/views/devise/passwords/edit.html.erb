<div class="container-fluid">
  <div class="row">
    <div class="wrapper col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 mx-auto">
      <div class="sign_up_form col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-6 col-md-6 col-md-offset-6 mx-auto">
        <h2 class = "text-center">パスワード変更</h2>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "新しいパスワード" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true,class:"text-center form-control",placeholder: "新しいパスワード" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "確認用新しいパスワード" %><br />
    <%= f.password_field :password_confirmation,class:"text-center form-control",placeholder: "新しいパスワード確認"  autocomplete: "off" %>
  </div>


    <%= f.submit "パスワード変更", :class=>"btn btn-outline-primary"  %>
 
<% end %>
          <div class = "shared">
            <%= render "devise/shared/links" %>
          </div>
    </div>
    </div>
  </div>
</div>    

<div class="container-fluid">
  <div class="row">
    <div class="wrapper col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 mx-auto">
      <div class="sign_up_form col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-6 col-md-6 col-md-offset-6 mx-auto">
        <h2 class = "text-center">ログイン</h2>
     
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label "メール" %><br />
            <%= f.email_field :email, autofocus: true,class:"text-center form-control",placeholder: "メールアドレス" %>
          </div>

          <div class="form-group">
            <%= f.label "パスワード" %><br />
            <%= f.password_field :password, class:"text-center form-control",placeholder: "パスワード" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label "保存する" %>
            </div>
          <% end %>

          
            <%= f.submit "Log in", :class=>"btn btn-outline-primary" %>
       
        <% end %>

            <div class = "shared">
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</div>    


